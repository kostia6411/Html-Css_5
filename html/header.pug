mixin select-item(item)
    .header__select-item
        span.header__select-item-text=item

mixin menu(namе)
    .header__select
        .header__select-header
            span.header__select-current=namе
            .header__select-icon
                img.header__select-icon-img(src='../media/svg/Select-icon.svg')
        .header__select-body
            +select-item('Post Header')
            +select-item('Post Layout')
            +select-item('Share Bottons')
            +select-item('Gallery Post')
            +select-item('Video Post')

header.header
    .header__mobile
        .header__mobile-top
            img.header__logo(src='../media/svg/Logotype.svg' alt='')
            .header__close-btn
                span.header__mobile-cross
        .header__bottom_mobile
            +menu('Demos')
            +menu('Post')
            +menu('Features')
            +menu('Categories')
            +menu('Shop')
            a.header__link(href='#') Buy Now

    .header__top
        .header__burger
            span.header__burger-menu
        img.header__logo(src='../media/svg/Logotype.svg' alt='')
        .header__top_right
            input.header__text-field(type='text' placeholder='Поиск')
            button.header__search
    .header__bottom
        +menu('Demos')
        +menu('Post')
        +menu('Features')
        +menu('Categories')
        +menu('Shop')
        a.header__link(href='#') Buy Now